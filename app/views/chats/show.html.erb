<h1>詳細画面</h1>

<p>内容: <%= @chat.content %></p>

<% unless @chat.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id:@favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(chat_id:@chat.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
